{
  "name": "jaw-tools",
  "version": "1.0.0",
  "description": "AI development utilities for Repomix and prompt compilation",
  "bin": {
    "jaw-tools": "./bin/jaw-tools-cli.js"
  },
  "scripts": {
    "postinstall": "node -e \"try { require('fs-extra'); require('./setup.js'); } catch (err) { console.error('Error during postinstall:', err.message); process.exit(0); }\"",
    "repomix": "jaw-tools repomix",
    "compile-prompt": "jaw-tools compile",
    "next-gen": "jaw-tools next-gen",
    "configure": "jaw-tools setup"
  },
  "dependencies": {
    "fs-extra": "^11.3.0",
    "glob": "^10.4.5",
    "gray-matter": "^4.0.3",
    "js-yaml": "^4.1.0",
    "repomix": ">=0.3.0"
  },
  "peerDependencies": {
    "repomix": ">=0.3.0"
  },
  "engines": {
    "node": ">=14.0.0"
  },
  "files": [
    "bin",
    "lib",
    "templates",
    "templates/.repo_ignore",
    "src",
    "setup.js",
    ".repo_ignore",
    "README.md"
  ],
  "keywords": [
    "AI",
    "development",
    "repomix",
    "prompt",
    "template"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/thejoeyweber/jaw-tools.git"
  },
  "private": true
}
